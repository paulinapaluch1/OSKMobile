<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/instructor"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_bottom="@+id/buttonStart"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Instruktor:"
        android:textColor="#ffff"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-7dp"

        />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/buttonStop"
        android:text="WYLOGUJ"


        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="START"


        />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-5dp"
        android:text="STOP"


        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonStop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marinEnd="15dp"
            android:background="#E4D9D9">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonStop"
                android:layout_alignTop="@id/logout"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_centerVertical="true"
                android:background="#00D1CFCF"
                android:gravity="center"
                android:text="Współrzędne:"
                android:textSize="30sp"
                android:visibility="visible" />
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"


        >
        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRZEŚLIJ DANE" />
    </LinearLayout>
</LinearLayout>