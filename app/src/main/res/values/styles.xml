<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#3bbdfa</item>
        <item name="android:navigationBarColor">@color/app_icon_background</item>

    </style>
    <style name="PrimaryButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/success</item>
        <item name="colorControlHighlight">#aaffc3

        </item>

    </style>
    <style name="ButtonBlue" parent="Theme.AppCompat">
        <item name="colorButtonNormal">#3bbdfa</item>
        <item name="colorControlHighlight">#8ad4eb

        </item>

    </style>
    <style name="LogoutButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/cardview_dark_background</item>
        <item name="colorControlHighlight">#bcbcbc

        </item>

    </style>




    <style name="RedButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/red</item>
        <item name="colorControlHighlight">#fabebe
        </item>
        <item name="android:disabledAlpha" android:state_enabled="false" >@color/success</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="IconButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>
